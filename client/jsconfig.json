{
  "compilerOptions": {
    "target": "ES6",             // Targets ECMAScript 2015 (ES6)
    "module": "commonjs",        // CommonJS module system
    "baseUrl": ".",              // Base directory for resolving paths
    "paths": {
      "@/*": ["./src/*"]        // Path alias for imports
    }
  },
  "include": ["src/**/*"],       // Includes all files in the src folder
  "exclude": ["node_modules", "dist"] // Excludes these directories
}